[Unit]
Description=mySosh-ws
After=network.target

[Service]
ExecStart=python3 /usr/share/hassio/homeassistant/mySosh/mySosh.py -s -D 900 -f /usr/share/hassio/homeassistant/mySosh/mySosh-ws.log
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
IgnoreSIGPIPE=true
Restart=always
RestartSec=3
Type=simple

[Install]
WantedBy=multi-user.target
